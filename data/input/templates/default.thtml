<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=<% get-default charset UTF-8 %>">
        <title><%
                set pageTitle [dict-default-get {} $pages $currentPageId variables pageTitle]
                set hideTitle [dict-default-get 0 $pages $currentPageId variables hideTitle]
                if {$hideTitle || ($pageTitle == "")} {
                    lindex $websiteTitle
                } else {
                    lindex "$pageTitle | $websiteTitle"
                }
            %></title>
        <link rel="stylesheet" href="<% lindex $rootDirLink/main.css %>">
        <% lindex [dict-default-get {} $pages $currentPageId variables headExtra] %>
    </head>
    <body>
        <div id="wrapper">
        <%  # Helper procs.
            proc format-link {id {li 1} {customTitle ""}} {
                upvar 1 pages pages pageLinks pageLinks
                set link [dict get $pageLinks $id]
                if {$customTitle ne ""} {
                    set title $customTitle
                } else {
                    set title [dict-default-get $link $pages $id variables pageTitle]
                }
                set linkHTML "<a href=\"$link\">$title</a>"
                if {$li} {
                    set linkHTML "<li>$linkHTML</li>"
                }
                return $linkHTML
            }
        %>

        <% # Link back to index.
            if {[info exists indexPage] && $currentPageId ne $indexPage} {
                lindex "<header id=\"index-link\">[format-link $indexPage 0]</header>"
            } else {
                lindex ""
            }
        %>

        <article>
        <% # Page title.
            set title [dict-default-get {} $pages $currentPageId variables pageTitle]
            if {$title ne "" && ![dict-default-get 0 $pages $currentPageId variables hideTitle]} {
                lindex "<header id=\"page-title\"><h2>$title</h2></header>"
            } else {
                lindex ""
            }
        %>
        <% # Date.
            set date [dict-default-get {} $pages $currentPageId variables date]
            if {$date ne "" && ![dict-default-get 0 $pages $currentPageId variables hideDate]} {
                lindex "<header id=\"date\">$date</header>"
            } else {
                lindex ""
            }
        %>
        <% textutil::indent $content {        } %>
        </article>

        <% # Page tag list.
            set tagList {}
            set tagPageLink {}
            if {[get-default tagPage {}] ne ""} {
                set tagPageLink [dict get $pageLinks $tagPage]
            }
            if {[dict-default-get 0 $pages $currentPageId variables blogEntry] && \
                ![dict-default-get 0 $pages $currentPageId variables hidePostTags]} {
                append tagList {<nav id="tags"><ul>}
                set postTags [dict-default-get {} $pages $currentPageId variables tags]
                foreach tag [lrange $postTags 0 end-1 ] {
                    append tagList "<li><a href=\"$tagPageLink#$tag\">$tag</a>, </li>"
                }
                set tag [lindex $postTags end]
                append tagList "<li><a href=\"$tagPageLink#$tag\">$tag</a></li>"
                append tagList {</ul></nav><!-- tags -->}
            }
            lindex $tagList
        %>

        <% # Blog sidebar.
            set sidebar {}
            if {[dict-default-get 0 $pages $currentPageId variables blogEntry] && \
                ![dict-default-get 0 $pages $currentPageId variables hideSidebar]} {
                append sidebar {<nav id="sidebar"><ul>}
                foreach {id ___} $pageLinks {
                    # Only add links to other blog entries.
                    if {[dict-default-get 0 $pages $id variables blogEntry] && \
                        ![dict-default-get 0 $pages $id variables hideFromList]} {
                        append sidebar [format-link $id]
                    }
                }
                append sidebar {</ul></nav><!-- sidebar -->}
            }
            lindex $sidebar
        %>

        <% # Blog tag cloud. For each tag it links to pages that are tagged with it.
            set tagCloud {}
            if {[dict-default-get 0 $pages $currentPageId variables showTagCloud]} {
                append tagCloud {<nav id="tag-cloud"><dl>}
                foreach {tag ids} [dict-default-get {} $pages tags] {
                    append tagCloud "<dt id=\"$tag\">$tag</a></dt><dd><ul>"
                    foreach id $ids {
                        set link [dict get $pageLinks $id]
                        append tagCloud [format-link $id]
                    }
                    append tagCloud "</ul></dd>"
                }
                append tagCloud {</dl></nav><!-- tag-cloud -->}
            }
            lindex $tagCloud
        %>

        <footer>
        <% # Footer.
            set footer {}
            if {[get-default copyright {}] ne ""} {
                append footer "<div id=\"copyright\">$copyright</div>"
            }
            if {![dict-default-get 0 $pages $currentPageId variables hideFooter]} {
                append footer {<div id="powered-by">Powered by ssg-tcl</div>}
            }
            lindex $footer
        %>
        </footer>
        </div>
    </body>
</html>
